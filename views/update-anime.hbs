<h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
          <span>Update Anime</span>
          <a class="link-secondary" href="#" aria-label="Add a new report">
            <span data-feather="plus-circle"></span>
          </a>
        </h6>

<form method="POST" action="/animedash/{{this.id}}">
<div class="col-6">
  <label for="exampleInputEmail1" class="form-label">Title</label>
  <div class="form-floating mb-3">
  <input type="text" class="form-control" id="exampleFormControlInput1" name="animename" placeholder="Title">
  </div>
</div>
<div class="col-6">
  <label for="exampleFormControlInput1" class="form-label">Description</label>
  <div class="form-floating mb-3">
  <textarea class="form-control mb-3" type="text" name="animedescription" 
  placeholder="Leave a comment here" id="floatingTextarea2" style="height: 130px"></textarea>
  </div>
</div>
<div class="col-6">
  <label for="exampleFormControlInput1" class="form-label">Series</label>
  <div class="form-floating mb-3">
  <input type="text" class="form-control" id="exampleFormControlInput1" name="animeseries" placeholder="Series">
  </div>
</div>

<div class="col-6">
  <label for="exampleFormControlInput1" class="form-label">Add Video (Put frame)</label>
  <div class="form-floating mb-3">
  <input type="text" class="form-control" id="exampleFormControlInput1" name="videoid">
  </div>
</div>
<div class="col-6">
  <label for="exampleFormControlInput1" class="form-label">Image (Put Link)</label>
  <div class="form-floating mb-3">
  <input type="text" class="form-control" id="exampleFormControlInput1" name="img">
  </div>
</div>

<button type="submit" class="col-6 btn btn-outline-danger mt-2 mb-4">Update</button>
</form>