<h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
          <span>Add Anime</span>
          <a class="link-secondary" href="#" aria-label="Add a new report">
            <span data-feather="plus-circle"></span>
          </a>
        </h6>
        <br/>
<form method="POST" action="/addmanga">
<div class="col-6">
  <label for="exampleInputEmail1" class="form-label">Title</label>
  <div class="form-floating mb-3">
  <input type="text" class="form-control" id="exampleFormControlInput1" name="manganame" placeholder="Title">
  </div>
</div>
<div class="col-6">
  <label for="exampleFormControlInput1" class="form-label">Description</label>
  <div class="form-floating mb-3">
  <textarea class="form-control mb-3" type="text" name="mangadescription" 
  placeholder="Leave a comment here" id="floatingTextarea2" style="height: 130px"></textarea>
  </div>
</div>
<div class="col-6">
  <label for="exampleFormControlInput1" class="form-label">Author</label>
  <div class="form-floating mb-3">
  <input type="text" class="form-control" id="exampleFormControlInput1" name="author" placeholder="Author">
  </div>
</div>
<div class="col-6">
  <label for="exampleFormControlInput1" class="form-label">Studio</label>
  <div class="form-floating mb-3">
  <input type="text" class="form-control" id="exampleFormControlInput1" name="studio" placeholder="Studio">
  </div>
</div>
<div class="col-6">
  <label for="exampleFormControlInput1" class="form-label">Genre</label>
  <div class="form-floating mb-3">
  <input type="text" class="form-control" id="exampleFormControlInput1" name="genre" placeholder="Genre">
  </div>
</div>

<div class="col-6">
  <label for="exampleFormControlInput1" class="form-label">Add Manga Link</label>
  <div class="form-floating mb-3">
  <input type="text" class="form-control" id="exampleFormControlInput1" name="file">
  </div>
</div>
<div class="col-6">
  <label for="exampleFormControlInput1" class="form-label">Image (Put Link)</label>
  <div class="form-floating mb-3">
  <input type="text" class="form-control" id="exampleFormControlInput1" name="img">
  </div>
</div>

<button type="submit" class="col-6 btn btn-outline-danger mt-2 mb-4">Add</button>
</form>