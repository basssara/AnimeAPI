{{#if message}}
<div class="alert alert-danger mt-3" role="alert">
  {{message}}
</div>
{{/if}}
<h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
          <span>Add Anime</span>
          <a class="link-secondary" href="#" aria-label="Add a new report">
            <span data-feather="plus-circle"></span>
          </a>
        </h6>
        <br/>
<form method="POST" action="/addanime">
<div class="col-6">
  <label id="exampleInputEmail1" class="form-label">Title</label>
  <div class="form-floating mb-3">
  <input type="text" class="form-control" id="exampleFormControlInput1" name="animename" placeholder="Title">
  </div>
</div>
<div class="col-6">
  <label id="exampleFormControlInput13" class="form-label">Description</label>
  <div class="form-floating mb-3">
  <textarea class="form-control mb-3" name="animedescription" 
  placeholder="Leave a comment here" id="floatingTextarea2" style="height: 130px"></textarea>
  </div>
</div>
<div class="col-6">
  <label id="exampleFormControlInput2" class="form-label">Series</label>
  <div class="form-floating mb-3">
  <input type="text" class="form-control" id="exampleFormControlInput3" name="animeseries" placeholder="Series">
  </div>
</div>

<div class="col-6">
  <label for="exampleFormControlInput1" class="form-label">Add Video (Put frame)</label>
  <div class="form-floating mb-3">
  <input type="text" class="form-control" id="exampleFormControlInput4" name="videoid">
  </div>
</div>
<div class="col-6">
  <label for="exampleFormControlInput1" class="form-label">Image (Put Link)</label>
  <div class="form-floating mb-3">
  <input type="text" class="form-control" id="exampleFormControlInput12" name="img">
  </div>
</div>

<button type="submit" class="col-6 btn btn-outline-danger mt-2 mb-4">Add</button>
</form>
